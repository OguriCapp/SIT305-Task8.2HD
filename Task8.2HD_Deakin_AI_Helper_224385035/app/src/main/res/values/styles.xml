<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorPrimaryVariant">@color/light_green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/light_green</item>
        <item name="colorSecondaryVariant">@color/light_green_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/light_green_dark</item>
        
        <!-- Text input styling -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        
        <!-- Button styling -->
        <item name="materialButtonStyle">@style/RoundedButtonStyle</item>
    </style>
    
    <!-- Custom rounded button style -->
    <style name="RoundedButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources> 